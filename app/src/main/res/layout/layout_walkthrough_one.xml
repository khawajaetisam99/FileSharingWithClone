<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp">

        <ImageView
            android:id="@+id/walk_through_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/appBrand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_walkthrough1"
             />

        <TextView
            android:id="@+id/appBrand"
            style="@style/TextAppearance.Primary.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/seamless_sharing"
            android:textSize="@dimen/font_size_title"
            app:layout_constraintBottom_toTopOf="@+id/welcomeTextwalkthroghone"
            app:layout_constraintEnd_toEndOf="@+id/walk_through_image"
            app:layout_constraintStart_toStartOf="@+id/walk_through_image"
            app:layout_constraintTop_toBottomOf="@+id/walk_through_image" />

        <TextView
            android:id="@+id/welcomeTextwalkthroghone"
            style="@style/TextAppearance.Secondary.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/walkthroughsides"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/seamless_sharing_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/appBrand"
            app:layout_constraintStart_toStartOf="@+id/appBrand"
            app:layout_constraintTop_toBottomOf="@+id/appBrand" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>